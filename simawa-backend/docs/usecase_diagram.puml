@startuml
left to right direction
actor "Admin Organisasi" as AdminOrg
actor "BEM/DEMA" as Bem
actor "Mahasiswa/Dosen" as Public

rectangle SIMAWA {
  usecase "Login" as UC_Login
  usecase "Kelola Profil Organisasi" as UC_OrgProfile
  usecase "Kelola Anggota" as UC_Member
  usecase "Buat & Ajukan Proposal" as UC_Proposal
  usecase "Kelola LPJ" as UC_LPJ
  usecase "Generate/Unduh Surat" as UC_Surat
  usecase "Setujui/Tolak Kegiatan" as UC_ApproveAct
  usecase "Setujui/Tolak LPJ" as UC_ApproveLPJ
  usecase "Moderasi Cover Galeri" as UC_Cover
  usecase "Lihat Dashboard" as UC_Dashboard
  usecase "Lihat Kalender & Galeri" as UC_PublicView
}

AdminOrg --> UC_Login
AdminOrg --> UC_OrgProfile
AdminOrg --> UC_Member
AdminOrg --> UC_Proposal
AdminOrg --> UC_LPJ
AdminOrg --> UC_Surat

Bem --> UC_Login
Bem --> UC_ApproveAct
Bem --> UC_ApproveLPJ
Bem --> UC_Cover
Bem --> UC_Dashboard

Public --> UC_PublicView

UC_Proposal --> UC_Login : <<include>>
UC_LPJ --> UC_Login : <<include>>
UC_Surat --> UC_Login : <<include>>
UC_ApproveAct --> UC_Login : <<include>>
UC_ApproveLPJ --> UC_Login : <<include>>

@enduml
